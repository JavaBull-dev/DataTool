<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_filename"
        android:layout_marginTop="@dimen/text_size"
        android:layout_marginStart="@dimen/text_size"
        android:layout_marginEnd="@dimen/text_size"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_size" />

    <ProgressBar
        android:id="@+id/pb_fileprog"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressBackgroundTint="@android:color/darker_gray"
        android:progressTint="@android:color/holo_blue_dark"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_marginTop="@dimen/text_size"
        android:layout_marginStart="@dimen/text_size"
        android:layout_marginEnd="@dimen/text_size"
        android:max="100"
        android:progress="50"/>

    <TextView
        android:id="@+id/tv_prog"
        android:textAlignment="textEnd"
        android:layout_marginStart="@dimen/text_size"
        android:layout_marginEnd="@dimen/text_size"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_size" />

    <EditText
        android:layout_marginStart="@dimen/text_size"
        android:layout_marginEnd="@dimen/text_size"
        android:id="@+id/et_log"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/ic_linearlayout_border"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textSize="@dimen/text_size_16" />
</LinearLayout>